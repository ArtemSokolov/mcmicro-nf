profiles {

  // Default profile, best suited for local runs
  standard {
    docker.enabled = true
    params.tool_unmicst = '/app'
    
    process {
      withName:ashlar {
        container = 'labsyspharm/ashlar:1.9'
      }
    }
  }

  // Profile specific to the HMS compute cluster
  O2 {
    process {
      executor = 'slurm'
      
      withName:ashlar {
        queue = 'short'
        clusterOptions = '-t 1:00:00 --mem=16000'
      }		      
    }	    
  }
}
