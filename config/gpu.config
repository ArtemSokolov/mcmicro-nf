process {
  withName:illumination   {
    time   = '6h'
    memory = '64G'
  }
  withName:coreograph     {
    time   = '1h'
    memory = '64G'
  }
  withName:ashlar         {
    time   = '6h'
    memory = '64G'
  }
  withName:unmicst        {
    time   = '1h'
    memory = '128G'
    queue = 'gpu'
    clusterOptions = '--gres=gpu:1'
  }
  withName:ilastik        {
    cpus   = 8
    time   = '12h'
    memory = '128G'
  }
  withName:s3seg          {
    cpus   = 6
    time   = '6h'
    memory = '80G'
  }
  withName:quantification {
    time   = '12h'
    memory = '128G'
  }
  withName:naivestates    {
    time   = '12h'
    memory = '128G'
  }
}
